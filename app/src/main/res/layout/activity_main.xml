<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorAccent"
  tools:context="com.example.android.singlescreenapp.MainActivity">
<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <ImageView
    android:id="@+id/imageStarbucks"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_weight="1"
    android:contentDescription="@string/starbucks"
    android:scaleType="centerCrop"
    android:src="@drawable/starbucks"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5"
    android:layout_below="@id/imageStarbucks"
    android:orientation="vertical">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/starbucks"
      android:textSize="28sp"
      android:textAllCaps="true"
      android:fontFamily="sans-serif-medium"
      android:textStyle="bold"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="16dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/address"
        android:src="@drawable/location_image"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="16dp"
      android:paddingRight="16dp"
      android:paddingLeft="16dp"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/phone"
        android:contentDescription="@string/phone_number"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_number"
        android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="16dp"
      android:paddingRight="16dp"
      android:paddingLeft="16dp"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/calendar"
        android:contentDescription="@string/daily"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daily"
        android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="16dp"
      android:paddingRight="16dp"
      android:paddingLeft="16dp"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/email_icon"
        android:contentDescription="@string/daily"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="16dp"
      android:paddingRight="16dp"
      android:paddingLeft="16dp"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/web_icon"
        android:contentDescription="@string/daily"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/site"
        android:textSize="18sp"/>
    </LinearLayout>

  </LinearLayout>

</LinearLayout>
</ScrollView>
